<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/letter"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/small_pink"
        android:textSize="28sp"
        tools:text="А" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@null"
        android:padding="10dp"
        android:scaleType="centerCrop"
        tools:background="@drawable/circle"
        tools:backgroundTint="@color/small_pink_alpha"
        tools:src="@drawable/ic_base_person"
        tools:tint="@color/small_pink" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:letterSpacing="0.03"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="sdfaasdf dffadsfa dsf addsafa asdfadfasd  dafadsfad adf asdf dsafasdfadsfads" />

    <TextView
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="@color/yellow"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:text="+ Пригласить"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/call"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="32dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_call"
        android:visibility="gone" />
</LinearLayout>