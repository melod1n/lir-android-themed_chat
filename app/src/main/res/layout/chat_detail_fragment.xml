<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/container"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_gradient"
        android:elevation="@dimen/margin_4"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="@dimen/margin_12"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@null"
            app:tint="@color/white" />


        <ImageView
            android:id="@+id/partnerPhoto"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="@dimen/margin_8"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_base_person"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/partnerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:layout_weight="1"
            android:text="@string/title_chat"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:paddingTop="@dimen/margin_16"
            android:paddingBottom="@dimen/margin_16"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_2"
            android:src="@drawable/ic_search_white" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        tools:itemCount="100"
        tools:listitem="@layout/item_chat_message_sent" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_12"
        app:cardCornerRadius="@dimen/margin_20"
        android:layout_marginVertical="@dimen/margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:backgroundTint="@color/colorRed"
                android:layout_margin="@dimen/margin_8"
                app:elevation="0dp"
                app:fabCustomSize="35dp"
                app:borderWidth="0dp"
                android:src="@drawable/ic_only_plus"/>

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_weight="1"
                android:maxLines="8"
                android:gravity="top"
                android:background="@null"
                android:hint="Введите текст сообщения"
                android:inputType="textMultiLine|textCapSentences"
                android:paddingVertical="8dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:autofillHints="auto"
                android:maxLength="400"/>

            <ImageView
                android:id="@+id/btnSend"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="8dp"
                android:backgroundTint="@color/small_pink"
                app:borderWidth="0dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_send" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>