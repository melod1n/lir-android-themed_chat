<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="5dp"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginEnd="@dimen/margin_10"
    android:paddingBottom="5dp"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/reciever_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        tools:text="Вчера"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:visibility="gone"
        android:alpha="0.7"
        android:textSize="@dimen/text_size_14"
        android:fontFamily="@font/roboto_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reciever_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_16"
            tools:background="@drawable/ic_oval"
            android:visibility="gone"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/message_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.6dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/rectangle_grey"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRecieverName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_14"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Настя"
                    android:visibility="gone"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:id="@+id/textMessageBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:linksClickable="true"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="13dp"
                    android:paddingEnd="40dp"
                    android:text="Добрый день!"
                    android:textColor="@color/black70"
                    android:textColorLink="@color/black"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/text_size_15"
                    android:fontFamily="@font/roboto_regular" />

                <ImageView
                    android:id="@+id/rPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="@dimen/margin_6"
                    android:layout_marginEnd="45dp"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    tools:src="@drawable/delete"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.01"
                    android:paddingEnd="@dimen/margin_10"
                    android:paddingBottom="5dp"
                    tools:text="10:40"
                    android:textColor="@color/black70"
                    android:textSize="@dimen/text_size_8" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/message_body"
                android:src="@drawable/ic_grey" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>