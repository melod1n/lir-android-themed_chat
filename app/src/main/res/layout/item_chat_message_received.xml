<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/reciever_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.7"
        android:fontFamily="@font/roboto_regular"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:visibility="gone"
        tools:text="Вчера" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reciever_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:background="@drawable/ic_oval" />

        <RelativeLayout
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/message_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.6dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/rectangle_grey"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRecieverName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Настя"
                    android:textColor="@color/purple"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textMessageBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:autoLink="all"
                    android:fontFamily="@font/roboto_regular"
                    android:linksClickable="true"
                    android:paddingLeft="13dp"
                    android:paddingEnd="40dp"
                    android:text="Добрый день!"
                    android:textColor="@color/black70"
                    android:textColorLink="@color/black"
                    android:textIsSelectable="true"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/rPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="45dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:visibility="gone"
                    tools:src="@drawable/delete" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.01"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black70"
                    android:textSize="8sp"
                    tools:text="10:40" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/message_body"
                android:src="@drawable/ic_grey" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>