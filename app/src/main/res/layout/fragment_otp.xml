<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rlEnterOtp"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="@string/sign_in_enter_otp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/rlEnterOtp"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etFirst"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_empty_field"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etSecond"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_empty_field"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etThird"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_empty_field"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etFourth"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:background="@drawable/shape_empty_field"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlEnterOtp"
            android:layout_marginTop="52dp"
            android:gravity="center"
            android:text="@string/sign_in_resend_otp_after"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>